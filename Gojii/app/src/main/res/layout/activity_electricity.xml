<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UPay.electricity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/colorPrimary"
            android:text="Electicity"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorSmokyWhite"
            android:gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="40dp"
            android:id="@+id/scNumber"
            android:hint="SC Number"
            android:inputType="text"
            android:gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="40dp"
            android:id="@+id/consumerID"
            android:hint="Consumer ID"
            android:gravity="center"
            android:inputType="number"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="40dp"
            android:id="@+id/consumerName"
            android:hint="Consumer"
            android:gravity="center"
            android:visibility="invisible"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="40dp"
            android:id="@+id/amount"
            android:hint="Amount"
            android:gravity="center"
            android:visibility="invisible"

            />



        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/getDetails"
            android:text="Get Details"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:background="@drawable/button"
            android:textColor="@color/colorSmokyWhite"

            />



    </LinearLayout>

</RelativeLayout>